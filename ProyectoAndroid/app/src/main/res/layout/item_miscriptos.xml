<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#423F3F"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_imagen2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/tv_nombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_imagen2"
            app:layout_constraintStart_toEndOf="@+id/iv_imagen2"
            app:layout_constraintTop_toTopOf="@+id/iv_imagen2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_numeroMonedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_imagen2"
            app:layout_constraintStart_toEndOf="@+id/iv_imagen2"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintTop_toTopOf="@+id/iv_imagen2"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_nombreCorto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:paddingRight="5dp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/tv_numeroMonedas"
            app:layout_constraintStart_toEndOf="@+id/tv_numeroMonedas"
            app:layout_constraintTop_toTopOf="@+id/tv_numeroMonedas" />

        <TextView
            android:id="@+id/tv_precioActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nombreCorto2"
            app:layout_constraintEnd_toStartOf="@+id/tv_procentaje2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_nombreCorto2"
            app:layout_constraintTop_toTopOf="@+id/tv_nombreCorto2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_dineroMonedas"
            android:layout_width="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_imagen2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/iv_imagen2"
            app:layout_constraintTop_toTopOf="@+id/iv_imagen2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_procentaje2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_imagen2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/iv_imagen2"
            app:layout_constraintTop_toTopOf="@+id/iv_imagen2"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
